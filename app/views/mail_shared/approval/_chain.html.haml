%tr.approval-chain{ align: "center", valign: "top" }
  %td.wrapper.no-top-padding.last{ align: "center", valign: "top" }
    %center
      - @proposal.individual_steps.each do |step|
        %table.eight.columns
          %tr
            %td.two.sub-columns.last
              = image_tag attachments[step_status_icon(step)].try(:url)
            %td.ten.sub-columns.no-bottom-padding
              %b
                = t("mailer.step_number", number: step.position - 1)
              %br/
              %span.lighter-text
                = "#{step.user.full_name}, #{step_user_title(step)}"
              %br/
              %span.lighter-text
                %em
                  = step.decorate.detailed_status
              - if step != @proposal.individual_steps.last
                %hr/
            %td.expander
