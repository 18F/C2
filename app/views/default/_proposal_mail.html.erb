<%#-- "proposal" is the critical local variable for using this partial --%>
<%#-- "title" is used to customize the tile in the h1 below --%>
<div class="row">
  <table class="w-container main-container xs-col-12" border='0' width='100%'>
    <tr>
      <td>
        <h1 class="c2_header">
          <%= title %>
        </h1>

        <div class="c2_description">
          <p>
            Requested by:
            <strong><%= proposal.requester.full_name %></strong>
          </p>
        </div>
      </td>
      <td class="c2_description">
        <img src="<%= image_url('img_logo_c2.gif') %>" width="229" height="43" alt="C2 logo" />
      </td>
    </tr>

    <%= render partial: "shared/email_status" %>
  </table>
</div>
