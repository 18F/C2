- header_icon = "emails/icon-page-circle.png"
- top_head = t("mailer.cancellation_mailer.cancellation_notification.header", 
                name: @proposal.requester.full_name)
- panel_icon = "emails/button-x-circled.png"
- panel_action = t("mailer.cancellation_mailer.cancellation_notification.subheader")
- panel_action_date = @proposal.created_at.strftime("%m/%d/%Y")+' at '+@proposal.created_at.strftime("%I:%M %P")
- panel_text = t("mailer.cancellation_mailer.cancellation_notification.reason", reason: @reason)
- cta_subheader = t("mailer.cancellation_mailer.cancellation_confirmation.reason", reason: @reason)

%table.body
  %tr
    %td.center{align: "center", valign: "top"}
      %center
        = render partial: "mail_shared/email_header/topbar"
        = render partial: "mail_shared/email_header/icon", locals: { icon: header_icon}

        / Start Container
        %table.container
          = render partial: "mail_shared/email_header/hero_text", locals: { text: top_head}
              
          / Start Panel Wrapper
          = render partial: "mail_shared/panel/header"
          
          = render partial: "mail_shared/panel/row_description", locals: { icon: icon, action: panel_action, datetime: panel_action_date}
          
          = render partial: "mail_shared/panel/row_content_text", locals: { text: panel_text, last: true}

          = render partial: "mail_shared/panel/vertical_buffer"
          / End Panel Wrapper

          = render partial: "mail_shared/call_to_action/subheader", locals: { subheader: ''}
          
          = render partial: "mail_shared/call_to_action/button", locals: { link_path: proposal_url(@proposal), link_text: t("mailer.cancellation_mailer.cta")}
          
          = render partial: "mail_shared/footer_foundation"




  


%table.full-width.header
  %tr
    %td.hero
    %td
      = image_tag "emails/icon-page-circle.png", class: "header-icon"

%table.two-thirds-width
  %tr
    %td.header
      = t("mailer.proposal_mailer.proposal_created_confirmation.header_html", proposal_name: @proposal.name)

%table.two-thirds-width
  %tr
    %td.subheader
      = t("mailer.proposal_mailer.proposal_created_confirmation.subheader")

= render partial: "mail_shared/proposal_button",
  locals: { button_text: t("mailer.proposal_mailer.proposal_created_confirmation.cta") }

%hr

%table.two-thirds-width
  %tr
    %td.subheader
      = t("mailer.proposal_mailer.proposal_created_confirmation.approver_subheader")

%table.one-third-width
  - @proposal.individual_steps.each_with_index do |step, index|
    %tr
      %td.subheader
        = index + 1
      %td.subheader
        = step.user.full_name
