%table.full-width.header
  %tr
    %td.hero
    %td
      = image_tag "emails/icon-pencil-circle.png", class: "header-icon"

%table.two-thirds-width
  %tr
    %td.header
      = t("mailer.proposal_mailer.proposal_updated_step_complete_needs_re_review.header", proposal_name: @proposal.name)

%hr

%table.two-thirds-width
  %tr
    %td.subheader
      = t("mailer.proposal_mailer.proposal_updated_step_complete_needs_re_review.subheader",
        modifier_name: @modifier.full_name,
        proposal_name: @proposal.name)

= render partial: "mail_shared/proposal_attributes",
  locals: { proposal: @proposal }

%table.two-thirds-width
  %tr
    %td.email-button
      = link_to generate_approve_url(@step), target: "_blank" do
        %p.email-button
          = @step.action_name

= render partial: "mail_shared/proposal_button",
  locals: { button_text: t("mailer.proposal_mailer.proposal_updated_step_complete_needs_re_review.cta") }
