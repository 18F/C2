- content_for :header_icon, "emails/icon-pencil-circle.png"
- top_head = t("mailer.proposal_mailer.proposal_updated_needs_re_review.header",
              modifier_name: @modifier.full_name,
              proposal_name: @proposal.name)
- cta_subheader = t("mailer.proposal_mailer.proposal_updated_needs_re_review.subheader")
- proposal_link_text = t("mailer.proposal_mailer.proposal_created_confirmation.cta")
- cta_subheader_foot = t("mailer.proposal_mailer.proposal_created_confirmation.approver_subheader")

%table.container
  = render partial: "mail_shared/email_header/hero_text", 
    locals: { text: top_head,
              style: "no-margin-wrapper" }

  = render partial: "mail_shared/call_to_action/subheader", 
    locals: { subheader: cta_subheader,
              vertical: "no-top-margin"}
  
  = render partial: "mail_shared/call_to_action/button", 
    locals: { link_path: proposal_url(@proposal), 
              link_text: proposal_link_text}
  
  = render partial: "mail_shared/call_to_action/subheader", 
    locals: { subheader: ''}

%hr/
/ Start Container
%table.container
  = render partial: "mail_shared/call_to_action/subheader", 
    locals: { subheader: cta_subheader_foot}

  = render partial: "mail_shared/approval/chain", 
    locals: { proposal: @proposal }




= render partial: "mail_shared/proposal_button",
  locals: { button_text: t("mailer.proposal_mailer.proposal_updated_needs_re_review.cta") }
