!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      = "#{yield(:title)} - " if content_for(:title).present?
      C2
    %link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    = stylesheet_link_tag "application", media: "all"
    = favicon_link_tag
    /[if lt IE 9] <haml_loud> javascript_include_tag &quot;es5-shim.min.js&quot; </haml_loud>
    = javascript_include_tag "application"
    = render "layouts/analytics"
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1", :name => "viewport"}/
    = render "layouts/meta_notice"
    = csrf_meta_tags
    - if list_view_conditions
      = render partial: 'layouts/scripts'
  %body{:class => "bodyclass webapp controller-#{controller_name} action-#{params[:action]}"}
    = render "peek/bar"
    = content_for?(:top_notification) ? yield(:top_notification) : ""
    - if list_view_conditions
      :plain
        <div class="row full-width-row content-parent">
      = render "layouts/c2_header_next"
    - else
      = render "layouts/c2_header"
      = render "layouts/notices"
    - if list_view_conditions
      - unless ENV["DISABLE_SANDBOX_WARNING"] == "true"
        .medium-9.large-10.medium-offset-3.large-offset-2
          = render partial: "shared/sandbox_warning"
      .medium-9.column.large-10.medium-offset-3.large-offset-2.content-main-wrapper
        = render partial: "layouts/user_header"
        = content_for?(:content) ? yield(:content) : yield
        - unless @skip_footer
          #footer.inset
            %p
              Find a bug, have a recommendation, or want to provide other feedback? We'd love to
              %a{:href => feedback_path, :target => "_blank"} hear from you!
      :plain
        </div>
    - else
      = content_for?(:content) ? yield(:content) : yield
      - unless @skip_footer
        #footer.inset
          %p
            Find a bug, have a recommendation, or want to provide other feedback? We'd love to
            %a{:href => feedback_path, :target => "_blank"} hear from you!
