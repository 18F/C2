%ul.header-nav
  - if signed_in?
    %li
      = session['user']['email']
      = image_tag 'icon-user.png', alt: ' '
    %li
      = button_to 'Logout', "/logout", method: :post, class: 'login-link'
      = image_tag 'icon-logout.png', alt: 'Logout'
  - else
    %li
      = link_to 'Sign in with MyUSA', auth_path
  %li
    = link_to 'Help', help_index_path
- if signed_in?
  .mycart-link
    %ul.header-nav
      %li
        = link_to "My Requests", proposals_path
        = image_tag "img-cart.png", width: '18px', height:'16px'
      = client_partial(current_user.client_slug || 'ncr', "header_links")
