.column{ id: key + '-wrapper', class: key + "-wrapper", "data-filter-key" => "recurring", "data-filter-value" => 1 }
  .detail-wrapper.row{ id: value_id }
    .detail-display.column
      %label.detail-element
        = t(t_slug + key)
      %span.detail-value
        = client_data[key]
    .detail-edit.column
      %label.detail-element
        = t(t_slug + key)
      %span.detail-value
        %div
          = f.input :recurring_length, step: 1, label: false
