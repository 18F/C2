.column{ id: key + '-wrapper', class: "half-col-wrap"}
  .detail-wrapper.row{ class: key + "-wrapper", id: value_id, "data-key" => Gsa18f::Procurement::PURCHASE_TYPES.keys }
    .detail-display.column
      %label.detail-element
        = t(t_slug + key)
      %span.detail-value
        = client_field_display
    .detail-edit.column
      %label.detail-element
        = t(t_slug + key)
      %span.detail-value
        = f.input :purchase_type,
          collection: Gsa18f::Procurement::PURCHASE_TYPES.keys,
          include_blank: true, label: false
