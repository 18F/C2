- f = @form
- content_for :title, "18F Events"
- t_slug = "decorators." + "gsa18f" + "/event."
- supervisors = User.with_slug("gsa18f")
- duty_station_help = "In what City and State do you work?"
- justification_help = "How will this event improve current or develop new skills associated with your job? How does it align with 18F/TTS?"
- instructions_help = "What does the ops team need to know in order to purchase this training? Please go through the steps to purchase (without paying) to see if there are any extras that someone else purchasing your training would need to know about (i.e. dietary preferences or T-shirt size for a conference with meals/T-shirts)"

.column{ id: "duty_station-wrapper"}
  .detail-wrapper.row{ class: "duty_station-wrapper"}
    .detail-edit.column
      %label.detail-element{ for: "gsa18f_duty_station"}
        Duty station 
        %span.hint--top-right.hint--rounded.hint--bounce.hint--medium.hint--inline{"aria-label" => duty_station_help} ?
      %span.detail-value
        = f.input :duty_station,
         label_html: { class: "detail-element" },
         label: false

.column{ id: "duty_station-wrapper"}
  .row
    .column.medium-12
      .detail-wrapper.row{ class: "duty_station-wrapper"}
        .detail-edit.column
          %label.detail-element{ for: "gsa18f_event_supervisor_id"}
            Supervisor
          %span.detail-value{class: "holo-chevron"}
            = f.input :supervisor_id,
              collection: supervisors,
              label: false,
              label_html: { class: "detail-element" }

.column{ id: "duty_station-wrapper"}
  .detail-wrapper.row{ class: "duty_station-wrapper"}
    .detail-edit.column
      %span.detail-value
