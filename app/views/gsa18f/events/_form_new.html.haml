- f = @form
- content_for :title, "18F Events"
- t_slug = "decorators." + "gsa18f" + "/event."
- supervisors = User.with_slug("gsa18f")
- duty_station_help = "In what City and State do you work?"
- justification_help = "How will this training or conference help you improve your skills or develop new ones?  How does it align with the goals of 18F and TTS?"
- instructions_help = "What does the ops team need to know to purchase this training? Please go through the steps to purchase (without paying) to see what extra information an ops team member might need (for example, your dietary preferences or t-shirt size).  If training/conference is provided to employee for free or at a discounted price, add link to NFS form"
- free_event__help = "41CFR 304-1 to 304-3 requires approval to accept payment from a Non-Federal Source. The NFS form must be completed, including an itemized list of expenses that the event sponsor offered to pay. The NFS form will be reviewed by the Office of General Counsel and determine if payment may be accepted."

.column{ id: "duty_station-wrapper"}
  .detail-wrapper.row{ class: "duty_station-wrapper"}
    .detail-edit.column
      %label.detail-element.required{ for: "gsa18f_event_duty_station" }
        = t(t_slug + "duty_station")
        %span.hint--top-right.hint--rounded.hint--bounce.hint--medium.hint--inline{"aria-label" => duty_station_help} ?
      %span.detail-value
        = f.input :duty_station,
         label_html: { class: "detail-element" }, label: false

.column{ id: "supervisor_id-wrapper"}
  .row
    .column.medium-12
      .detail-wrapper.row{ class: "supervisor_id-wrapper"}
        .detail-edit.column
          %label.detail-element.required{ for: "gsa18f_event_supervisor_id" }
            = t(t_slug + "supervisor_id")
          %span.detail-value{class: "holo-chevron"}
            = f.input :supervisor_id,
              collection: supervisors,
              label: false,
              label_html: { class: "detail-element" }

.column{ id: "title_of_event-wrapper"}
  .detail-wrapper.row{ class: "title_of_event-wrapper"}
    .detail-edit.column
      %label.detail-element.required{ for: "gsa18f_event_title_of_event" }
        = t(t_slug + "title_of_event")
      %span.detail-value
        = f.input :title_of_event,
         label_html: { class: "detail-element" }, label: false

.column{ id: "event_provider-wrapper"}
  .detail-wrapper.row{ class: "event_provider-wrapper"}
    .detail-edit.column
      %label.detail-element.required{ for: "gsa18f_event_event_provider"}
        = t(t_slug + "event_provider")
      %span.detail-value
        = f.input :event_provider,
         label_html: { class: "detail-element" }, label: false

.column{ id: "type_of_event-wrapper"}
  .detail-wrapper.row{ class: "type_of_event-wrapper"}
    .detail-edit.column
      %label.detail-element.required{ for: "gsa18f_event_type_of_event" }
        = t(t_slug + "type_of_event")
      %span.detail-value
        = f.input :type_of_event,
          collection: Gsa18f::Event::EVENT_TYPES.keys,
          as: :radio_buttons,
          include_blank: true,
          label_html: { class: "detail-element" }, label: false

.column{ id: "cost_per_unit-wrapper"}
  .row
    .column.medium-12
      .detail-wrapper.row{ class: "cost_per_unit-label-wrapper"}
        .detail-edit.column
          %label.detail-element{ for: "gsa18f_event_cost_per_unit" }
            = t(t_slug + "cost_per_unit")
  .row
    .column.medium-5
      .detail-wrapper.row{ class: "cost_per_unit-wrapper"}
        .detail-edit.column
          %span.detail-value
            = f.input :cost_per_unit, as: :currency,
              input_html: { value: 0 },
             label_html: { class: "detail-element" }, label: false

.column{ id: "start_date-wrapper"}
  .row
    .column.medium-5.half-col-wrap.sub-card.sub-card-left
      .detail-wrapper.row{ class: "start_date-wrapper"}
        .detail-edit.column
          %label.detail-element{ for: "gsa18f_event_start_date" }
            = t(t_slug + "start_date")
          %span.detail-value
            = f.input :start_date, as: :date, html5: true,
             label_html: { class: "detail-element" }, label: false,
             input_html: {class: "event-date"}

    .column.medium-5.half-col-wrap.sub-card.sub-card-right
      .detail-wrapper.row{ class: "end_date-wrapper"}
        .detail-edit.column
          %label.detail-element{ for: "gsa18f_event_end_date" }
            = t(t_slug + "end_date")
          %span.detail-value
            = f.input :end_date, as: :date, html5: true,
              label_html: { class: "detail-element" }, label: false,
              input_html: {class: "event-date"}
    .column.medium-2

.column{ id: "purpose-wrapper"}
  .detail-wrapper.row{ class: "purpose-wrapper"}
    .detail-edit.column
      %label.detail-element.required{ for: "gsa18f_event_purpose" }
        = t(t_slug + "purpose")
      %span.detail-value
        = f.input :purpose, as: :text,
         label_html: { class: "detail-element" }, label: false

.column{ id: "justification-wrapper"}
  .detail-wrapper.row{ class: "justification-wrapper"}
    .detail-edit.column
      %label.detail-element.required{ for: "gsa18f_event_justification" }
        = t(t_slug + "justification")
        %span.hint--top-right.hint--rounded.hint--bounce.hint--medium.hint--inline{"aria-label" => justification_help} ?
      %span.detail-value
        = f.input :justification, as: :text,
         label_html: { class: "detail-element" }, label: false

.column{ id: "link-wrapper"}
  .detail-wrapper.row{ class: "link-wrapper"}
    .detail-edit.column
      %label.detail-element.required{ for: "gsa18f_event_link" }
        = t(t_slug + "link")
      %span.detail-value
        = f.input :link,
         label_html: { class: "detail-element" }, label: false

.column{ id: "instructions-wrapper"}
  .detail-wrapper.row{ class: "instructions-wrapper"}
    .detail-edit.column
      %label.detail-element.required{ for: "gsa18f_event_instructions" }
        = t(t_slug + "instructions")
        %span.hint--top-right.hint--rounded.hint--bounce.hint--large.hint--inline{"aria-label" => instructions_help} ?
      %span.detail-value
        = f.input :instructions, as: :text,
         label_html: { class: "detail-element" }, label: false

.column{ id: "free_event-wrapper"}
  .detail-wrapper.row{ class: "free_event-wrapper"}
    .detail-edit.column
      %span.detail-value.check-left
        = f.input :free_event,
         label_html: { class: "detail-element" }, label: false
        %span.hint--top-right.hint--rounded.hint--bounce.hint--large.hint--inline{"aria-label" => free_event__help} ?
        %label.detail-element{ for: "gsa18f_event_free_event" }
          = t(t_slug + "free_event")
        %p.help-block
          = t(t_slug + "free_event_link").html_safe

.column{ id: "travel_required-wrapper"}
  .detail-wrapper.row{ class: "travel_required-wrapper"}
    .detail-edit.column
      %span.detail-value.check-left
        = f.input :travel_required,
         label_html: { class: "detail-element" }, label: false,
         input_html: { "data-filter-control" => "travel_required" }
        %label.detail-element{ for: "gsa18f_event_travel_required" }
          = t(t_slug + "travel_required")

.column{ class: "sub-card", id: "estimated_travel_expenses-wrapper", "data-filter-key" => "travel_required", "data-filter-value" => 1 }
  .detail-wrapper.row{ class: "estimated_travel_expenses-wrapper"}
    .column.medium-12
      .detail-edit.column
        %label.detail-element.required{ for: "gsa18f_event_estimated_travel_expenses" }
          = t(t_slug + "estimated_travel_expenses")
    .column.medium-5.end
      .detail-edit.column
        %span.detail-value
          = f.input :estimated_travel_expenses, as: :currency,
           label_html: { class: "detail-element" }, label: false
    .column.medium-12
      .detail-edit.column
        %p.help-block
          %a{:href => "https://docs.google.com/spreadsheets/d/1uJaGMXJOwURruaPdV7PU5B7Q22_iyF8Q2Gk2uamDG8Y/edit#gid=0", target: "_blank"}
            Estimate all of your expenses here and attach a budget to your request
