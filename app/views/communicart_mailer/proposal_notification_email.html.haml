%table.reply-section
  = client_data_partial(@proposal.client_data_prefix,
    "email_header/" + @alert_partial.to_s)
  %tr
    %td.w-container.html-email-message
      = client_data_partial(@proposal.client_data_prefix,
        "mail_prefix",
        locals: { proposal: @proposal, title: "Purchase Request" })
%div{style: 'width:800px'}
  = render partial: 'comments', locals: { comments: @proposal.comments }
  = render partial: 'attachments', locals: { proposal: @proposal }
  = client_data_partial(@proposal.client_data_prefix,
    "proposal_mail",
    locals: { proposal: @proposal, title: "Purchase Request" })
  = render partial: 'email_reply', locals: { approval: @approval, show_approval_actions: @show_approval_actions, proposal: @proposal }
