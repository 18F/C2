<body class="communicart-notification">
  <table class='reply-section'>
    <tr>
      <td class="w-container html-email-message">
        ------------------
        <br/>
        <strong>Please reply to this email with the response 'APPROVE' or 'REJECT' on its own line.</strong>
        <br/>

<% if !@prefix_template.blank? %>
  <%= render partial: @prefix_template, locals: {cart: @cart, title:  "Purchase Request"} %>
<% end %>
        <p>
          Additional comments:
        </p>

        <% unless @cart.comments.empty? %>
          <p>
            <%= @cart.comments.first.comment_text %>
          </p>
        <% end %>

        <br/>
      </td>
    </tr>
  </table>
  <%= render partial: @cart_template, locals: {cart: @cart, title:  "Purchase Request"} %>
  <table class='reply-section'>
    <tr height="25"><td colspan=2 height="25" bgcolor="#f5f5f5"></td></tr>

    <%- if @cart_template.blank? %>
      <tr id="approval-actions">
        <td align="right" width="50%">
          <p>
            <span class="summary-label">Total Price</span>
          </p>
        </td>
        <td align="left" width="50%">
          <p class="result-item-price">
            <strong>$<%= @cart.total_price %></strong>
          </p>
        </td>
      </tr>
    <%- end %>

    <tr id="approval-actions">
      <td colspan=2 align="center">
        <p>

       <%= link_to "Approve all items with one click", approval_response_url(cart_id: @cart.id, user_id: @approval.user_id, cch: @token.access_token, approver_action: 'approve'), {class: 'form-button'} %>
       </p>
        <p>
          <strong>
            <%= link_to "Or, view this request in your browser", "#" %>
          </strong>
        </p>
        <p>
        <span class="action-block">
            <span class="tip-highlight">TIP:</span> <strong>If you want to reject this request</strong>, reply to this email with the word "Reject"
            on its own line and some comments as to why the request has been rejected.
        </span>
        </p>
      </td>
    </tr>


  </table>
</body>
