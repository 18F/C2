%table.full-width.header
  %tr
    %td.hero
    %td
      = image_tag "emails/icon-pencil-circle.png", class: "header-icon"

%table.two-thirds-width
  %tr
    %td.header
      = t("mailer.comment_mailer.comment_added_notification.header",
        user_name: @comment.user.full_name,
        proposal_name: @proposal.name)

%table.two-thirds-width
  %tr
    %td.subheader
      = t("mailer.comment_mailer.comment_added_notification.comment_text",
        comment_text: @comment.comment_text)
  %tr
    %td.subheader
      = t("mailer.comment_mailer.comment_added_notification.subheader")

= render partial: "mail_shared/proposal_button",
  locals: { button_text: t("mailer.comment_mailer.comment_added_notification.cta") }

= render partial: "mail_shared/proposal_comment_button",
  locals: { button_text: t("mailer.comment_mailer.comment_added_notification.cta_2") }

= render partial: "mail_shared/footer"
