.title-block
  %span.status-action #{event.item_type} #{event.event_type}d
  - if event.user
    by #{event.user.full_name}
  %span.time-from
    = date_with_tooltip(event.created_at, recent_time_only: true)
.item-block.attachment
  %a{href: proposal_attachment_path(@proposal, event.attachment)}
    = image_tag "icon-attachment.svg"
    = event.attachment.file_file_name
