.action-bar-template.action-bar-status
  .medium-12.column.status-bar
    %ul#request-actions.centered
      %li.fl.modify-button.action-default
        Your updates have been saved.
  
.action-bar-template.action-bar-wrapper
  .medium-12.column
    %ul#request-actions.centered
      - if policy(@proposal).can_complete?
        %li.fr.modify-button.action-default
          = form_tag(complete_proposal_path(@proposal, method: "POST")) do
            = hidden_field_tag :version, @proposal.version
            = submit_tag @proposal.step_text_for_user(:execute_button, current_user), class: "form-button"
      - if !policy(@proposal).can_complete?
        %li.fr.modify-button.action-default
          = link_to("Go back", :back, class: "button secondary fr large")
          
          
      - if policy(@proposal).can_edit?
        - unless @proposal.canceled?
          %li.fl.action-edit
            Save your changes to modify your request
          %li.fr.save-button.action-edit
            = modify_client_button(@proposal, "Save", "button primary fr large")
          %li.fr.cancel-button.action-edit
            = link_to("Cancel", @proposal, class: "button secondary fr large")
