.card-for-attachments
  .row
    .medium-12.column
      .card
        .card-head.column
          %h2
            Attachments
            = #modify_client_button(@proposal, "<span>Attach File</span>".html_safe, "button secondary attach-icon fr large")
        .content-content.column
          .row
            .medium-12.column
              = form_for [@proposal, Attachment.new], html: { multipart: true }, remote: true, authenticity_token: true do |f|
                = f.file_field :file
                = submit_tag "Attach a file", id: :add_a_file, data: {"disable-if-empty" => "attachment_file"}, class: "button primary round no-margin-bottom"
          .row
            .medium-12.column
              %h3 Attachments to this proposal
              %ul.attachment-list
                = render partial: "proposals/details/attachment_list"
              - if @proposal.attachments.empty?
                .content-content.column
                  .row
                    .medium-12.column
                      .item-block
                        %p.empty-list-label No attachments have been added yet
