span.request-count {
  position: absolute;
  right: 15%;
  top: 0px;
  bottom: 0px;
  margin: auto;
  display: block;
  padding-top: 20px;
  padding-bottom: 20px;
}



.login-link{
  color: #4a4a4a;
}
@media screen and (max-width: 60em){
  .user-link-wrap{
    margin-bottom: 20px;
  }
}

.sidebar-home{
  height: auto !important;
  min-height: 100%;
  padding-right: 0em;
  background: #333541;
  a.new-request-button:before {
    content: "+";
    position: absolute;
    right: 10%;
    font-size: 1.3em;
    line-height: 1.2em;
  }
  @media screen and (max-width: 60em){
    .link-container{
      position: absolute;
      left: 0px;
      width: 100%;
      z-index: 101;
      display: none;
      background: #333541;
      padding-bottom: 1em;
    }
    .link-container.visible{
      display: block;
    }
  }
  @media screen and (min-width: 60em){
    width: 250px;
  }
  .request-related-button.active:hover{
    background: #444754 !important;
    margin: 0px!important;
    border: none!important;

  }
  @media screen and (max-width: 60em){
    padding: 0px;
    width: 100%;
    .request-related-button.active{
      a:before{
        background: #C5DCED;
      }
      &:hover{
        a:before{
          background: #DBEAF5;
        }
      }
    }
  }
  .header-nav{
    overflow: hidden;
    width: 100%;
  }
  #header-identity{
    text-align: center;
    min-height: 80px;
    button{
      display: none;
    }
    @media screen and (max-width: 60em){
      button{
        display: block;
        position: absolute;
        margin: auto;
        top: 10px;
        right: 10px;
      }
      min-height: 47px;
    }
    img{
      padding-top: 20px;
      padding-bottom: 20px;
      max-width: 300px;
      width: 80%;
      @media screen and (max-width: 60em){
        margin-left: 1em;
        padding-top: 5px;
        padding-bottom: 5px;
        max-width: 160px;
        width: 100%;
      }
    }
    a{
      display: block;
    }
  }

  .controller-gsa18f-events.action-new{
    .new-request-events{

    }
  }
  .controller-gsa18f-procurements.action-new{
    .new-request-procurements{

    }
  }
  @media screen and (min-width: 60em){
    position: absolute;
    margin-left: 0px;
    padding-left: 0px;
  }
  height: 100%;
  .sidebar-wrapper{
    background: #333541;
    position: relative;
    height: 100%;
  }
  .new-request-button, .reports-button{
    background: #333541;
    &:hover, &:focus{
      background: #71737A;
    }
  }
  .side-secondary-nav{
    list-style: none;
    font-size: 14px;
    color: white;
    clear: both;
    padding-top: 1em;
    a{
      color: #c5dced;
    }
  }
  .header-nav{
    border-bottom: 1px solid #71737A;
    margin-left: 0px;
    background: #444754;
    li{
      position: relative;
      border-top: 1px solid #71737A;
      .new-features-button{
        border-bottom: 1px solid #71737A;
      }
      &.no-hover{
        background: #444754!important;
        &:hover{
          border-bottom-color: #444754 !important;
        }
      }
      &.button-divider{
        display: block;
        width: 82%;
        height: 1px;
        background: #71737A;
        margin: auto;
      }
      &.requests-button{
        &:focus, &:hover{
          a, span.request-count{
            outline: none;
          }
          &:hover{
            background: #71737A;
          }
        }
      }
      &.request-related-button{
        border: none;
        position: relative;
        a{
          margin-left: 10px;
          font-size: 14px;
          position: relative;
          padding-left: 24%;
          width: 100%;
          display: block;
          font-weight: normal;
          position: relative;
          &:before{
            content: "";
            width: 20px;
            height: 20px;
            display: block;
            position: absolute;
            left: 6%;
            margin: auto;
            top: 0px;
            bottom: 0px;
            background-size: contain!important;
            background-position: center;
            background-repeat: no-repeat;
          }
          &[data-trigger='all']:before{
            background-image: url("<%= asset_path('sidenav/box.png') %>");
          }
          &[data-trigger='pending']:before{
            background-image: url("<%= asset_path('sidenav/pending.png') %>");
          }
          &[data-trigger='completed']:before{
            background-image: url("<%= asset_path('sidenav/check.png') %>");
          }
          &[data-trigger='canceled']:before{
            background-image: url("<%= asset_path('sidenav/folder.png') %>");
          }
        }
        &.active a,
        &:focus a{
          &[data-trigger='all']:before{
            background-image: url("<%= asset_path('sidenav/box-dark.png') %>");
          }
          &[data-trigger='pending']:before{
            background-image: url("<%= asset_path('sidenav/pending-dark.png') %>");
          }
          &[data-trigger='completed']:before{
            background-image: url("<%= asset_path('sidenav/check-dark.png') %>");
          }
          &[data-trigger='canceled']:before{
            background-image: url("<%= asset_path('sidenav/folder-dark.png') %>");
          }
        }
        &.view-all-button-wrapper:before{
          border-top: none;
        }
        &.active{
          a, span.request-count{
            color: #333541;
          }
        }
        &.active, &:focus, &:hover{
          a, span.request-count{
            outline: none;
          }
          &:hover{
            a{
              margin-left: -5px;
            }
            margin-left: 15px;
            margin-top: -1px;
            margin-bottom: -1px;
            border-top: 1px solid #71737A;
            border-bottom: 1px solid #71737A;
            background: #71737A;
          }
          &.active{
            // &:hover{
            //   background: #DBEAF5;
            // }
            &:before{
              background: #C5DCED;
            }
            &:hover{
              &:before{
                background: #DBEAF5;
              }
              a{
                margin-left: 10px;
              }
            }
          }
          &:before {
            border: none;
            content: "";
            position: absolute;
            height: 100%;
            width: 100%;
            right: 0px;
            @media screen and (min-width: 60em){
              width: 235px;
            }
          }
        }
      }
      width: 100%;
      padding: 0px;
      background: #444754;
      a,
      span.button-stub{
        text-align: left;
        display: block;
        padding: 20px 20px;
        width: 100%;
        font-weight: bold;
        color: white;
        text-decoration: none;
      }
    }
  }
}
li.requests-button:hover {
  margin-bottom: -1px;
  border-bottom: 1px solid #71737a;
}

span.button-stub:hover{
  border: none!important;
}

li.requests-button:hover {
  margin-bottom: -1px;
  border-bottom: 1px solid #71737a;
}

@-webkit-keyframes fadeIt {
  0%   { background-color: #FFFFFF; }
  100%  { background-color: #DBEAF5; }
}
@-moz-keyframes fadeIt {
  0%   { background-color: #FFFFFF; }
  100%  { background-color: #DBEAF5; }
}
@-o-keyframes fadeIt {
  0%   { background-color: #FFFFFF; }
  100%  { background-color: #DBEAF5; }
}
@keyframes fadeIt {
  0%   { background-color: #FFFFFF; }
  100%  { background-color: #DBEAF5; }
}



.controller-proposals.action-index.beta-list{
  .request-related-button:before{
    @media screen and (min-width: 60em){
      width: 225px !important;
      -webkit-transition: width .2s;
              transition: width .2s;
    }
  }
  &.datatable-loaded{
    .request-related-button.active:before{
       -webkit-transition: width .2s;
            transition: width .2s;
      @media screen and (min-width: 60em){
        width: 235px !important;
      }
    }
  }
}

.request-related-button.active:before,
.request-related-button.active:hover:before
{
   background-image:none !important;
    -webkit-animation: fadeIt .3s ease-in-out;
       -moz-animation: fadeIt .3s ease-in-out;
         -o-animation: fadeIt .3s ease-in-out;
            animation: fadeIt .3s ease-in-out;
}


a.new-request-button,
a.reports-button{
  &.active{
    background: #C5DCED;
    color: #333541!important;
    &:hover{
      background: #DBEAF5;
    }
  }
}
