.observer-list-item{
  .button_to{
    float: right;
  }
}

.observer-list-item .button_to input[type="submit"]{
  color: #3373B1;
}

.observer-list-item {
  position: relative;
}

.observer-list-item .button_to {
  position: absolute;
  right: 3px;
  line-height: 16px;
}

.observer-list-item {
  position: relative;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 3px;
  padding-right: 3px;
  border-bottom: 1px solid #E8E8E8;
}

li.observer-list-item:hover {
  background: lighten(#E8E8E8, 5%);
  .button_to:before {
    opacity: .7;
  }
}

.observer-list-item .button_to input[type="submit"]:focus {
  outline: none;
}

ul.observer-list{
  list-style: none;
  margin: 0px 0px 15px 0px;
}

.card-for-observers {
  #new_observation {
    .selectize-input {
      margin-bottom: 12px;
    }
    .not-full {
      &:before {
        content: 'Add an observer';
      }
    }
    label {
      color: map-get($c2black-swatch, primary);
      margin: 10px 0 5px 0;
    }
    input[disabled] {
      display: none !important;
    }
  }
  .selectize-dropdown{
    position:relative !important;
    top: 1px !important;
  }
}
