#card-for-attachments{
  .button {
    .attachment-icon {
      max-width: 14px;
      margin-left: 3px;
      margin-bottom: 5px;
    }
  }
}
.attachment-list-item{
  .remove-button{
    display: inherit;
    margin: 10px 0;
  }
}

.attachment-list-item input[type="submit"]{
  color: #3373B1;
}

.attachment-list-item {
  position: relative;
}

.attachment-list-item {
  position: relative;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 3px;
  padding-right: 3px;
  border-bottom: 1px solid #E8E8E8;
  .download-btn {
    position: absolute;
    right: 29px;
  }
}

li.attachment-list-item:hover {
  background: lighten(#E8E8E8, 5%);
  .remove-button:before {
    opacity: .7;
  }
}

.attachment-list-item input[type="submit"]:focus {
  outline: none;
}

ul.attachment-list{
  list-style: none;
  margin: 0px 0px 15px 0px;
}
.attachment-file-input, .attachment-submit {
  width: 0.1px;
  height: 0.1px;
  opacity: 0;
  overflow: hidden;
  position: absolute;
  z-index: -1;
}

.show-attachment-file{
  width:100% !important;
  height: 100% !important;
  opacity: 1 !important;
  overflow: visible !important;
  position: relative !important;
  z-index:99 !important;
}

.attachment-label p{
  background-image: image-url('green-bar.png')
}
.attachment-loading{
  color: #767676;
  position:relative;
  strong{
    margin-left:25px;
  }
  img{
    position:absolute;
    left:3px;
  }
}

.proposal-attachment_icon {
  padding-left: 0.625rem;
  padding-right: 0.625rem;
}

.proposal-attachment_path {
  padding-top: 10px;
}
