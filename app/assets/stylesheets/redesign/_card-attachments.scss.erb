.attachment-list-item{
  .button_to{
    float: right;
  }
}

.attachment-list-item .button_to input[type="submit"]{
  color: #3373B1;
}

.attachment-list-item {
  position: relative;
}

.attachment-list-item .button_to {
  position: absolute;
  right: 3px;
  top: 16px;
  line-height: 16px;
  &:hover {
    border-bottom: 1px solid #3373B1;
  }
}

.attachment-list-item {
  position: relative;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 3px;
  padding-right: 3px;
  border-bottom: 1px solid #E8E8E8;
  .download-btn {
    position: absolute;
    right: 29px;
  }
}

li.attachment-list-item:hover {
  background: lighten(#E8E8E8, 5%);
  .button_to:before {
    opacity: .7;
  }
}

.attachment-list-item .button_to input[type="submit"]:focus {
  outline: none;
}

ul.attachment-list{
  list-style: none;
  margin: 0px 0px 15px 0px;
}

.attachment-list-item .button_to input[type="submit"]{
  &:hover{
    background-image: image-url('remove-x.png');
    background-repeat: no-repeat;
    opacity: 1;
  }
  display: block;
  width: 18px;
  height: 18px;
  background-repeat: no-repeat;
  background-image: image-url('remove-x.png');
  opacity: .8;
}
.attachment-file-input, .attachment-submit {
  width: 0.1px;
  height: 0.1px;
  opacity: 0;
  overflow: hidden;
  position: absolute;
  z-index: -1;
}

.show-attachment-file{
  width:100% !important;
  height: 100% !important;
  opacity: 1 !important;
  overflow: visible !important;
  position: relative !important;
  z-index:99 !important; 
}

.attachment-label p{
  background-image: image-url('green-bar.png')
}
.attachment-loading{
  color: #767676;
  position:relative;
  strong{
    margin-left:25px;
  }
  img{
    position:absolute;
    left:3px;
  }
}

.remove-attachment-btn{
    &:hover{
      &::before{
        content: "Remove";
        font-style: italic;
        position: absolute;
        right: 30px;
        top:14px;
        color: #3373B1;
      }
    }
  } 
