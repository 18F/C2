.full-width-row{
  position: relative;
  max-width: 100%;
}

.sidebar-home{
  #header-identity{
    text-align: center;
    img{
      padding-top: 10px;
      padding-bottom: 10px;
      max-width: 300px;
      width: 80%;
    }
    a{
      display: block;
    }
  }
  @media screen and (min-width: 40em){
    position: absolute;
    margin-left: 0px;
    padding-left: 0px;
  }
  height: 100%;
  .sidebar-wrapper{
    background: #333541;
    position: relative;
    height: 100%;
  }
  .new-request-button, .reports-button{
    background: #333541;
  }
  .side-secondary-nav{
    list-style: none;
    font-size: 14px;
    color: white;
    clear: both;
    padding-top: 1em;
    a{
      color: #c5dced;
    }
  }
  .header-nav{
    margin-left: 0px;
    li{
      &:first-child{
        border-top: 2px solid #5a5b60;
      }
      border-bottom: 2px solid #5a5b60;
      width: 100%;
      padding: 0px;
      background: #444754;
      a{
        display: block;
        padding: 15px 20px;
        width: 100%;
        font-weight: bold;
        color: white;
        text-decoration: none;
      }
    }
  }
}

ul.inline-list{
  margin: 0px;
  &.has-dividers{
    li{
      padding-left: 10px;
      padding-right: 5px;
      &:first-child{
        &:before{
          border: none;
        }
      }
      position: relative;
      &:before{
        content: "";
        height: 12px;
        position: absolute;
        left: 0px;
        border-left: 1px solid #ccc;
        top: 0px;
        bottom: 0px;
        margin: auto;
      }
    }
  }
  li{
    display: inline;
    a, .button_to input{
      font-size: 14px;
      text-decoration: none;
      color: #2d5a79;
    }
  }
}

.header-user{
  padding-top: 1em;
  padding-bottom: 1em;
}

table#tabular-data {
  width: 100%!important;
}

.proposals-unfiltered{
  h3{
    margin-bottom: 1em;
    color: #4a4a4a;
    font-weight: bold;
  }
}

.buttons-columnVisibility,
.buttons-columnVisibility:hover,
.buttons-columnVisibility:focus
{
  background-color: #8aa5c3;
  &.active{
    background-color: #3a6e93;
  }
}

.proposals-unfiltered{
  position: relative;
  a.resetter{
    display: block;
    padding-bottom: 15px;
    padding-top: 10px;
    text-decoration: underline;
  }
  .fa-search:before{
    font-size: 20px;
  }
  .m-search-ui.expanded .adv-controls{
    padding-left: 0px;
  }
  div.search{
    position: relative;
    height: 4em;
    .m-search-ui.row{
      @media screen and (min-width: 40em){
        float: right;
        right: 0px;
      }
      margin-left: 0px;
      padding-right: 0px;
    }
    .form-group{
      margin-bottom: 0px;
    }
    fieldset.adv{
      background-color: rgb(227, 227, 227);
    }
  }
  .form-horizontal .control-label {
    text-align: left;
    font-weight: bold;
  }
  .input-group,
  .form-control,
  [type='text'], [type='password'], [type='date'], [type='datetime'], [type='datetime-local'], [type='month'], [type='week'], [type='email'], [type='number'], [type='search'], [type='tel'], [type='time'], [type='url'], [type='color'], textarea{
    margin-bottom: 0px;
  }
}

#tabular-data_wrapper{
  a.buttons-colvis{
    color: white;
    text-decoration: none;
    font-weight: bold;
  }
  .table-header::after{
    content: "";
  }
  tr{
    td{
      border-right: 1px solid #eee;
      &.sorting_1{
        border-left: 1px solid #eee;
      }
    }
    td, td a{
      color: #4a4a4a;
      text-decoration: none;
    }
  }
}

.dataTables_wrapper{
  font-size: 14px;
  #tabular-data_filter{
    display: none;
  }
  tr{
    td, td a{
      color: #4a4a4a;
      text-decoration: none;
    }
    &.even{
      background: #fff;
    }
    &.odd{
      background: #f8f8f8;
    }
  }

  .tabular-data th{
    background: #3a6e93;
    padding: 10px;
    &.sorting_desc, &.sorting_asc{
      background-color: #2d5a79;
    }
  }
  .tabular-data th .table-header{
    font-weight: bold;
    text-transform: capitalize;
  }
  .tabular-data th .table-header a{
    text-decoration: none;
    color: white;
  }
}
