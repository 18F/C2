table.dataTable thead .sorting {
  background-image: url("<%= asset_path 'DataTables/sort_both.png' %>");
}
table.dataTable thead .sorting_asc {
  background-image: url("<%= asset_path 'DataTables/sort_asc.png' %>");
}
table.dataTable thead .sorting_desc {
  background-image: url("<%= asset_path 'DataTables/sort_desc.png' %>");
}
table.dataTable thead .sorting_asc_disabled {
  background-image: url("<%= asset_path 'DataTables/sort_asc_disabled.png' %>");
}
table.dataTable thead .sorting_desc_disabled {
  background-image: url("<%= asset_path 'DataTables/sort_desc_disabled.png' %>");
}


.dataTables_wrapper{
  font-size: 14px;
  #tabular-data_filter{
    display: none;
  }
  .tabular-data th{
    background: #3a6e93;
    padding: 10px;
    &.sorting_desc, &.sorting_acs{
      background: #2d5a79;
    }
  }
  .tabular-data th .table-header{
    font-weight: bold;
    text-transform: capitalize;
  }
  .tabular-data th .table-header a{
    text-decoration: none;
    color: white;
  }
}
