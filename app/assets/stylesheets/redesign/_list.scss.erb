}

.content-parent .sandbox-banner{
  margin-bottom: 1em;
}

.full-width-row{
  max-width: 100%;
}


ul.inline-list{
  margin: 0px;
  &.has-dividers{
    li{
      padding-left: 10px;
      padding-right: 5px;
      &:first-child{
        &:before{
          border: none;
        }
      }
      position: relative;
      &:before{
        content: "";
        height: 12px;
        position: absolute;
        left: 0px;
        border-left: 1px solid #ccc;
        top: 0px;
        bottom: 0px;
        margin: auto;
      }
    }
  }
  li{
    display: inline;
    a, .button_to input{
      font-size: 14px;
      text-decoration: none;
      color: #2d5a79;
    }
  }
}

.header-user{
  padding-top: 1em;
  padding-bottom: 1em;
}

table#tabular-data {
  width: 100%!important;
}

.proposals-unfiltered{
  h3{
    margin-bottom: .5em;
    color: #4a4a4a;
    font-weight: bold;
  }
}

.buttons-columnVisibility,
.buttons-columnVisibility:hover,
.buttons-columnVisibility:focus
{
  background-color: #8aa5c3;
  &.active{
    background-color: #3a6e93;
  }
}

.proposals-unfiltered{
  position: relative;
  a.resetter{
    display: block;
    padding-bottom: 15px;
    padding-top: 10px;
    text-decoration: underline;
  }
  .fa-search:before{
    font-size: 20px;
  }
  .m-search-ui.expanded .adv-controls{
    padding-left: 0px;
  }
  div.search{
    position: relative;
    height: 4em;
    margin-bottom: 1em;
    .m-search-ui.row{
      fieldset.basic{
        padding-right: 0em;
      }
      @media screen and (min-width: 64em){
        float: right;
        right: 0px;
      }
      @media screen and (min-width: 40em){
        margin-left: 0px;
        padding-right: 0px;
      }
      @media screen and (min-width: 40em) and (max-width: 64em){
        margin: auto !important;
      }
    }
    .form-group{
      margin-bottom: 0px;
    }
    fieldset.adv{
      background-color: rgb(227, 227, 227);
    }
  }
  .form-horizontal .control-label {
    text-align: left;
    font-weight: bold;
  }
  .input-group,
  .form-control,
  [type='text'], [type='password'], [type='date'], [type='datetime'], [type='datetime-local'], [type='month'], [type='week'], [type='email'], [type='number'], [type='search'], [type='tel'], [type='time'], [type='url'], [type='color'], textarea{
    margin-bottom: 0px;
  }
}

#tabular-data_wrapper{
  a.buttons-colvis{
    color: white;
    text-decoration: none;
    font-weight: bold;
  }
  .table-header::after{
    content: "";
  }
  tr{
    td{
      border-right: 1px solid #eee;
      &.sorting_1{
        border-left: 1px solid #eee;
      }
    }
    td, td a{
      color: #4a4a4a;
      text-decoration: none;
    }
  }
}

div.dt-button-collection.dt-button-collection{
  width: 193px;
  .buttons-columnVisibility{
    width: 100%;
    padding-top: 5px;
    padding-bottom: 5px;
    text-align: left;
    padding-left: 30px;
    padding-right: 0px;
    position: relative;
    &:before{
      content: "☐";
      display: block;
      width: 13px;
      height: 13px;
      position: absolute;
      background: none;
      left: 8px;
      top: 0px;
      bottom: 0px;
      margin: auto;
      font-size: 22px;
      line-height: 10px;
    }
    &.active:before{
      content: "☒";
    }
  }
}

.dataTables_wrapper{
  font-size: 14px;
  #tabular-data_filter{
    display: none;
  }
  tr{
    td, td a{
      color: #4a4a4a;
      text-decoration: none;
    }
    &.even{
      background: hsla(0,0%,100%,1);;
      &:hover{
        background: hsla(0,0%,95%,1);
      }
    }
    &.odd{
      background: hsla(0,0%,97%,1);
      &:hover{
        background: hsla(0,0%,89%,1);
      }
    }
  }

  .tabular-data th{
    background: #3a6e93;
    padding: 10px;
    &.sorting_desc, &.sorting_asc{
      background-color: #2d5a79;
    }
  }
  .tabular-data th .table-header{
    font-weight: bold;
    text-transform: capitalize;
  }
  .tabular-data th .table-header a{
    text-decoration: none;
    color: white;
  }
}
