table.dataTable thead .sorting {
  background-image: url("<%= asset_path 'DataTables/sort_both.png' %>");
}
table.dataTable thead .sorting_asc {
  background-image: url("<%= asset_path 'DataTables/sort_asc.png' %>");
}
table.dataTable thead .sorting_desc {
  background-image: url("<%= asset_path 'DataTables/sort_desc.png' %>");
}
table.dataTable thead .sorting_asc_disabled {
  background-image: url("<%= asset_path 'DataTables/sort_asc_disabled.png' %>");
}
table.dataTable thead .sorting_desc_disabled {
  background-image: url("<%= asset_path 'DataTables/sort_desc_disabled.png' %>");
}

table.dataTable.dtr-inline.collapsed > tbody > tr > td:first-child:before, table.dataTable.dtr-inline.collapsed > tbody > tr > th:first-child:before{
  left: 7px;
}

div.dt-button-background.dt-button-background{
  background: none;
}

.dataTables_wrapper{
  table.dataTable thead .sorting, table.dataTable thead .sorting_asc, table.dataTable thead .sorting_desc, table.dataTable thead .sorting_asc_disabled, table.dataTable thead .sorting_desc_disabled {
    background-position: 100% center;
  }
}

body.webapp .content-main-wrapper {
  font-family: "Helvetica", Arial, sans-serif;
}

tbody tr td{
  position: relative;
  .unellipsised{
    position: absolute;
    top: 0px;
    left: 0px;
    width: auto;
    display: none;
    padding: 10px;
    z-index: 1;
    background: #E8E8E8;
  }
  &.show-ellipsis{
    .unellipsised{
      display: inline-block;
    }
    .ellipsis{
      visibility: hidden;
    }
  }
}

td.total_price {
    text-align: right;
}


div.dt-button-collection.dt-button-collection{
  background-color: #3a6e93;
  .active{
    background-color: #2d5a79;
  }
}


.tabular-data{
  display: block;
  overflow: hidden;
  border-radius: 4px 4px 0px 0px;
}

#tabular-data_wrapper tr td, #tabular-data_wrapper tr td a{
  height: 50px;
  vertical-align: text-top;
  color: #333541;
  line-height: 18px;
}

tr.active-row:hover .public_id a, .active-row td.public_id a{
  text-decoration: underline!important;
}

.content-main-wrapper{
  padding-top: 1em;
  .inline-list a{
    color: #4a4a4a;
    &[href='/profile'] {
      font-weight: bold;
    }
    &:hover{
      text-decoration: underline;
    }
  }
}

.content-parent .sandbox-banner{
  margin-bottom: 1em;
}

.full-width-row{
  max-width: 100%;
}

.tabular-data.tabular-data td {
  padding: 10px;
}

ul.inline-list{
  margin: 0px;
  &.has-dividers{
    li{
      padding-left: 10px;
      padding-right: 5px;
      &:first-child{
        &:before{
          border: none;
        }
      }
      position: relative;
      &:before{
        content: "";
        height: 12px;
        position: absolute;
        left: 0px;
        border-left: 1px solid #ccc;
        top: 0px;
        bottom: 0px;
        margin: auto;
      }
    }
  }
  li{
    display: inline;
    a, .button_to input{
      font-size: 14px;
      text-decoration: none;
      color: #4a4a4a;
    }
  }
}

.header-user{
  padding-top: 1em;
  padding-bottom: 1em;
}

table#tabular-data {
  width: 100%!important;
  tr.active-row{
    background: yellow;
  }
}


.beta-list{

  table.dataTable.dtr-inline.collapsed > tbody > tr.parent > td:first-child:before, table.dataTable.dtr-inline.collapsed > tbody > tr.parent > th:first-child:before {
    background-color: #2d5a79;
  }

  #search-button{
    padding: 8px 12px 7px;
  }
  h3{
    margin-bottom: .5em;
    color: #4a4a4a;
    font-weight: bold;
  }
}

.proposals-unfiltered.row{
  max-width: 100%;
}

.buttons-columnVisibility,
.buttons-columnVisibility:hover,
.buttons-columnVisibility:focus
{
  margin-bottom: 5px;
  background-color: transparent;
  opacity: .9;
  &.active{
    opacity: 1;
    background-color: #3a6e93;
  }
}

.proposals-unfiltered{
  position: relative;
}

.beta-list{
  .tabular-data tr{
    border-bottom: none;
  }
  a.resetter{
    display: block;
    padding-bottom: 15px;
    padding-top: 10px;
    text-decoration: underline;
  }
  .fa-search:before{
    font-size: 20px;
  }
  .m-search-ui.expanded .adv-controls{
    padding-left: 0px;
  }
  @media screen and (min-width: 60em){
    .dt-buttons.button-group{
      position: absolute;
      top: 0px;
      z-index: 2003;
    }
  }
  @media screen and (max-width: 60em){
    .dt-buttons.button-group{
      text-align: left;
    }
    th:first-child{
      width: auto !important;
    }
    th{
      width: 100% !important;
    }
  }
  div.search{
    clear: both;
    position: relative;
    height: 4em;
    margin-bottom: 1em;
    @media screen and (max-width: 60em){
      height: auto;
    }
    .m-search-ui.row{
      margin-right: 0px;

      @media screen and (max-width: 60em){
        margin: 0px;
        width: 100%;
        padding: 0px;
        fieldset.basic{
          padding: 0px;
          margin: 0px;
        }
      }
      fieldset.basic{
        padding-right: 0em;
      }
      @media screen and (min-width: 64em){
        float: right;
        right: 0px;
      }
      @media screen and (min-width: 60em){
        margin-left: 0px;
        padding-right: 0px;
      }
      @media screen and (min-width: 60em) and (max-width: 64em){
        margin: auto !important;
      }
    }
    .form-group{
      margin-bottom: 0px;
    }
    fieldset.adv{
      background-color: rgb(227, 227, 227);
    }
  }
  .form-horizontal .control-label {
    text-align: left;
    font-weight: bold;
  }
  .input-group,
  .form-control,
  [type='text'], [type='password'], [type='date'], [type='datetime'], [type='datetime-local'], [type='month'], [type='week'], [type='email'], [type='number'], [type='search'], [type='tel'], [type='time'], [type='url'], [type='color'], textarea{
    margin-bottom: 0px;
  }
}

a.button.small.buttons-columnVisibility:hover {
  opacity: 0.7;
}

#tabular-data_wrapper{
  padding-top: 29px;
  .button.dropdown::after {
    content: '';
    border: none;
    border-color: transparent;
    border-top-style: none;
    border-bottom-width: 0;
    position: relative;
    top: 0px;
    float: right;
    display: inline-block;
    background-image: url("<%= asset_path 'DataTables/sort_desc_disabled.png' %>");
    height: 19px;
    width: 19px;
    margin-left: 10px;
    margin-right: -10px;
    margin-top: -5px;
  }
  a.buttons-colvis{
    color: white;
    text-decoration: none;
    font-weight: bold;
  }
  .table-header::after{
    content: "";
  }
  tr{
    td{
      border-left: 1px solid #eee;
      &.sorting_1{
        border-left: 1px solid #eee;
      }
      &:first-child{
        border-left: none;
      }
    }
    td, td a{
      cursor: pointer;
      color: #333541;
      text-decoration: none;
    }
  }
}

div.dt-button-collection.dt-button-collection{
  width: 180px;
  padding-top: 33px;
  z-index: 2002;
  border: none;
  margin-top: -29px;
  .buttons-columnVisibility{
    width: 100%;
    padding-top: 5px;
    padding-bottom: 5px;
    text-align: left;
    padding-left: 16px;
    padding-right: 0px;
    position: relative;
    color: #dbea5f;
    &.active{
      color: white;
    }
  }
}

.dataTables_wrapper{
  font-size: 14px;
  #tabular-data_filter{
    display: none;
  }
  tr{
    td, td a{
      color: #4a4a4a;
      text-decoration: none;
    }
    &:hover{
      td, td a{
        background: #E8E8E8;
      }
    }
    &.even{
      background: hsla(0,0%,100%,1);;
    }
    &.odd{
      background: hsla(0,0%,97%,1);
    }
  }

  td.public_id a {
    font-weight: bold;
  }

  .tabular-data th{
    background: #3a6e93;
    padding: 10px;
    vertical-align: text-top;
    &.sorting_desc, &.sorting_asc{
      background-color: #2d5a79;
    }
  }
  .tabular-data th .table-header{
    font-weight: bold;
    text-transform: capitalize;
  }
  .tabular-data th .table-header a{
    text-decoration: none;
    color: white;
  }
}
