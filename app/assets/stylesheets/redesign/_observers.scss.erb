.observer-list-item{
  .button_to{
    float: right;
  }
}

.observer-list-item .button_to input[type="submit"]{
  color: #3373B1;
}

.observer-list-item {
  position: relative;
}

.observer-list-item .button_to {
  position: absolute;
  right: 0px;
  &:hover{
    border-bottom: 1px solid #3373B1;
  }
}

.observer-list-item .button_to input[type="submit"]:focus {
  outline: none;
}

.observer-list-item .button_to:before {
  content: "";
  display: block;
  width: 18px;
  height: 18px;
  background-repeat: no-repeat;
  position: absolute;
  top: 2px;
  margin: auto;
  bottom: 0px;
  left: -20px;
  background-image: image-url('remove-x.png');
  background-color: white;
}
