@media screen and (min-width: 64em){
  .large-offset-2{
    padding-left: 270px;
  }
}

.row.row.cards-wrapper{
  max-width: 100%;
  margin: 0px;
  padding: 0px;
}

.card-head{
  h2, h3{
    color: map-get($c2blue-swatch, primary);
    font-weight: 600;
    font-size: 20px;
  }
}

#mode-parent{
  padding-bottom: 0px;
}

[class*=hint--] {
  top: 24px;
  right: 9%;
  z-index: 2;
  color: map-get($c2blue-swatch, primary);
  border-radius: 50%;
  border: 2px solid map-get($c2blue-swatch, primary);
  width: 21px;
  height: 21px;
  text-align: center;
  margin-right: -25px;
  font-size: 12px;
  font-weight: 900;
  font-family: sans-serif;
  cursor: pointer;
}
[class*=hint--]:after {
  background: map-get($c2blue-swatch, primary) !important;
  text-shadow: none !important;
  text-align: left;
  padding: 15px !important;
  font-weight: normal;
  z-index: 2;
}
.hint--bottom-left:before {
  border-bottom-color: map-get($c2blue-swatch, primary) !important;
}

.card {
  font-size: 15px;
  background: #fff;
  textarea, input{
    box-shadow: none;
  }
  .remove-button{
    &:hover{
      background-image: image-url('remove.png') !important;
      background-repeat: no-repeat !important;
      opacity: 1;
    }
    display: block;
    width: 23px;
    height: 23px;
    border: none;
    background-color: inherit;
    background-repeat: no-repeat !important;
    background-image: image-url('remove.png') !important;
    opacity: .8;
  }
  .form-control{
    min-height: 39px;
  }
  .button.secondary:hover, .button.secondary:focus {
    background-color: transparent;
    color: #3273b1;
  }
  .selectize-input.items.has-options.full.has-items:hover {
    overflow: visible;
    padding: 0px;
    border: none;
    outline: none;
    box-shadow: none;
    .item{
      min-height: 2.4375rem;
      min-width: 100%;
      width: auto;
      position: absolute;
      background: white;
      padding: 6px 12px;
      border: 1px solid #cccccc;
      border-radius: 4px;
      box-sizing: border-box;
      box-shadow: none;
    }
  }
  .selectize-input.items{
    height: 2.4375rem;
    font-size: 14px;
    line-height: 1.42857143;
    vertical-align: top;
    overflow: hidden;
    .item{
      vertical-align: text-top;
      width: 1000px;
    }
    input{
      height: auto;
      width: 100% !important;
    }
  }
  .selectize-input > * {
    vertical-align: text-top;
  }
  .radio {
    display: inline-block;
    margin-right: 13px;
    margin-bottom: 0px;
    margin-top: 0px;
  }
  .callout{
     border-radius: 4px;
  }
  .detail-value label {
    line-height: 16px;
  }
  input, textarea{
    &.value-changed{
      background: #FFFDE8;
    }
  }
  .form-group{
    margin: 5px 0;
  }
  label,legend{
    font-size: 15px;
    line-height: 16px;
  }
  textarea {
    resize: none;
    border-radius: 4px;
    font-size: 14px;
    margin-top: 10px;
  }
  input[type=text], input[type=number]{
    border-radius: 4px;
    font-size: 14px;
  }
  a.button:last-child{
    margin-right: 0px;
  }
  h2{
    color: map-get($c2blue-swatch, primary);
  }
  .content-content{
    padding-top: 30px;
    padding-bottom: 15px;
    padding-left: 25px;
    padding-right: 25px;
    &.no-attachments {
      padding-top: 0px;
      padding-left: 0px;
      padding-right: 0px;
    }
  }
  &.card-edited{
    .card-head{
      // background-color: #FFE67F;
    }
  }
  .card-head{
    -webkit-transition: background-color .3s;
    transition: background-color .3s;
    a.edit-icon span{
      position: relative;
      padding-right: 25px;
    }
    a.edit-icon span:before {
      content: "";
      display: block;
      width: 18px;
      height: 18px;
      background-image: url('/assets/icon-edit.png');
      background-repeat: no-repeat;
      position: absolute;
      right: -3px;
      top: 0px;
      background-size: contain;
    }
    a.attach-icon span:before {
      content: "";
      display: block;
      width: 18px;
      height: 18px;
      background-image: url('/assets/icon-attachment.png');
      background-repeat: no-repeat;
      position: absolute;
      right: -1px;
      top: 6px;
      background-size: contain;
    }
    h2{
      margin-bottom: 0px;
    }
    a.button, label.button{
      position: absolute;
      border-color: $primary-color;
      padding: 0.7em 2em 0.7em;
      font-size: 0.9rem;
      font-weight: normal;
      text-transform: none;
      margin-right: 0px;
      margin-bottom: 0px;
      right: 19px;
      top: 50%;
      margin-top: -1.2em;
      background: transparent;
      span{
        color: #275989;
      }
      &.status-wrap{
        background: $white;
        border: none;
        padding: 0.7em 3.5em;
        text-transform: uppercase !important;
        font-size: 11px;
        color: $dark-gray;
        .status-value{
          font-size: 15px;
          font-weight: bold;
          text-transform: none;
        }
        &:hover{
          background: $primary-color;
        }
      }
      &.primary{
        border-color: $primary-color;
        &:hover{
          border-color: white;
        }
      }
      &:hover{
        color: white;
        background: $backgroundColor;
      }
    }
    position: relative;
    padding-top: 20px;
    padding-left: 25px;
    padding-right: 25px;
    padding-bottom: 20px;
    background: $backgroundColor;
  }
  overflow: hidden;
  // box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
  border-radius: 4px;
  margin-bottom: 1.875rem;
  .title {
    line-height: 3rem;
    font-size: 1.5rem;
    font-weight: 300;
  }
  .content {
    padding: 1.3rem;
    font-weight: 300;
    border-radius: 0 0 2px 2px;
  }
  p {
    margin-bottom: 15px;
    font-size: 16px;
    word-break: break-word;
  }
  .action {
    border-top: 1px solid rgba(160, 160, 160, 0.2);
    padding: 1.3rem;
  }
  a {
    word-wrap: break-word;
    word-break: break-all;
    transition: color 0.3s ease;
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }
  .image {
    position: relative;
    .title {
      position: absolute;
      bottom: 0;
      left: 0;
      padding: 1.3rem;
      color: #fff;
    }
    img {
      border-radius: 2px 2px 0 0;
    }
  }
}
